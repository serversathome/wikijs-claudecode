# This file was created by Claude Code - Development Dockerfile for Wiki.js
FROM node:20-alpine

# This section was modified by Claude Code - Added Apprise for notifications
RUN apk add --no-cache git python3 make g++ bash openssh-client py3-pip \
    && pip3 install --break-system-packages apprise

WORKDIR /wiki

# Copy package files
COPY package.json yarn.lock ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy application code
COPY . .

# Build the application
RUN yarn build

# Create data directory
RUN mkdir -p /wiki/data

EXPOSE 3000

CMD ["node", "server"]
